window:
  padding:
    x: 10
    y: 10

  decorations: None
  opacity: 0.9
  dimensions:
    columns: 200
    lines: 50

shell:
  program: /usr/bin/zsh
  args:
    - --login
    - --interactive

font:
  normal:
    family: "MesloLGM Nerd Font Mono" # Mono version prevents misalignment
  size: 12

import:
  - ~/.config/alacritty/alacritty-theme/themes/cyber_punk_neon.yaml

env:
  TERM: xterm-256color
